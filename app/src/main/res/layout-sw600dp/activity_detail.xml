<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:divider="?android:dividerVertical"
        android:showDividers="middle">

        <fragment
            android:id="@+id/tablet_details_fragment"
            android:name="com.example.bakingcakes.Fragments.DetailsFragment"
            android:layout_width="@dimen/width_for_tablet"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/tablet_step_fragment"
            android:name="com.example.bakingcakes.Fragments.StepFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
