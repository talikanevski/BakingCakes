<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/cv_recipe_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cake_card_height"
    android:layout_marginLeft="@dimen/cake_card_horizontal_margin"
    android:layout_marginRight="@dimen/cake_card_horizontal_margin"
    android:layout_marginBottom="@dimen/cake_card_bottom_margin">
    <!--card_view:cardCornerRadius="30dp"-->
    <!--card_view:cardElevation="6dp">-->

    <TextView
        android:id="@+id/cake_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/cake_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />
</android.support.v7.widget.CardView>